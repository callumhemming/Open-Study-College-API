{
    "compilerOptions": {
        "module": "es2020",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": [
            "node",
            "jest"
          ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "./dist"]
}